@using Kendo.Mvc.UI;
@using Econom.Web.Areas.Admin.ViewModels;

@model IEnumerable<StoragesLocationsViewModel>

<div class="demo-section k-content map-locations">
    @(Html.Kendo().Chart(Model)
        .Name("chart")
        .Title("Food Storages Map")
        .HtmlAttributes(new { style = "width:400px;height:400px" })
         .Legend(legend => legend
            .Visible(false)
        )
        .SeriesDefaults(series =>
            series.Donut().StartAngle(350)
        )
        .Legend(legend => legend
            .Position(ChartLegendPosition.Bottom)
        )

        .SeriesColors(new string[] { "#9de219", "#90cc38", "#068c35", "#006634", "#004d38", "#033939" })
        .Series(series =>
        {
            series.Donut(
                model => model.Value,
                model => model.Location,
                null,
               model => true
            );
        })
        .Tooltip(tooltip => tooltip.
            Template("${ category } - ${ value }%").Visible(true)
        )
    )
</div>