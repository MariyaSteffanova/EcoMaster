@using Econom.Web.Areas.Private.ViewModels
@model List<RecipeSearchResultViewModel>


@foreach (var recipe in Model)
{
    @Html.DisplayFor(model => recipe)
}

<script>

    $('a[data-role="show-ingredients"]').click(function (e) {
        $($(e.target).siblings('.ingredients')[0]).show();
    });

    $('a[data-role="hide-ingredients"]').click(function (e) {
        $('.ingredients').hide();
    });
</script>